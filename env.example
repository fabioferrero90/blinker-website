# Configurazione ambiente per blinker-app.com
# Copia questo file come .env e modifica i valori

# Ambiente
NODE_ENV=development

# Configurazione SSL
VITE_SSL_ENABLED=true
VITE_SSL_CERT_PATH=./ssl/localhost.pem
VITE_SSL_KEY_PATH=./ssl/localhost-key.pem

# Configurazione server
VITE_SERVER_HOST=0.0.0.0
VITE_SERVER_PORT=3000
VITE_PREVIEW_PORT=4173

# Configurazione API
VITE_API_URL=https://blinker-app.com/api
VITE_API_TIMEOUT=30000

# Configurazione build
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# Configurazione deployment
VITE_DEPLOY_HOST=your-server-ip
VITE_DEPLOY_USER=root
VITE_DEPLOY_PATH=/var/www

# Configurazione analytics (opzionale)
VITE_GA_TRACKING_ID=
VITE_GTM_ID=

# Configurazione feature flags
VITE_ENABLE_PWA=false
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_DEBUG_MODE=true
